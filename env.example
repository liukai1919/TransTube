# TransTube 环境配置

# OpenAI API 配置（用于翻译）
OPENAI_API_KEY=your_openai_api_key_here

# Ollama 配置（本地 LLM）
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=gpt-oss:20b
OLLAMA_NUM_PREDICT=1024

# 服务器配置
SERVER_URL=http://localhost:8000

# GPU 配置
CUDA_VISIBLE_DEVICES=0
NVIDIA_VISIBLE_DEVICES=all

# 功能开关
USE_WHISPERX=true
USE_THREE_STAGE_TRANSLATION=true
USE_SMART_SPLIT=true
EXTRACT_TERMINOLOGY=true

# ===== 术语库配置 =====
USE_PREDEFINED_TERMS=true
AUTO_EXTRACT_TERMS=true
CUSTOM_TERMINOLOGY_PATH=
MAX_TERMS_IN_PROMPT=50

# ===== 网络搜索配置 =====
# 启用网络搜索功能（可选，需要API密钥）
ENABLE_WEB_SEARCH=false

# 搜索API配置（至少配置一个才能启用网络搜索）
SERPER_API_KEY=
BING_SEARCH_API_KEY=

# 搜索参数
MAX_WEB_SEARCH_TERMS=5
WEB_SEARCH_CACHE_DAYS=30

# ===== 翻译质量控制 =====
CHECK_TERMINOLOGY=true
AUTO_CORRECT=true
TRANSLATION_TEMPERATURE=0.2
TRANSLATION_MAX_RETRIES=3
TRANSLATION_TIMEOUT=180

# Redis 配置（可选）
REDIS_URL=redis://redis:6379 